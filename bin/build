#!/bin/bash

# this script builds o876.js

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
SRC_JS_DIR=$SCRIPT_DIR/../src
DIST_DIR=$SCRIPT_DIR/../dist


doBuild() {
	local sDestFile="$DIST_DIR/o876.js"
	if [ -f "$sDestFile" ]
	then
		rm "$sDestFile"
	fi
	touch "$sDestFile"
	for sFile in o2.js Mixin/Data.js Mixin/Events.js Mixin/Prop.js Astar.js Bresenham.js Browser.js CanvasFactory.js Easing.js Mediator.js Philter.js Rainbow.js SoundSystem.js XHR.js parseSearch.js rasterize.js typeMap.js
	do
		cat "$SRC_JS_DIR/$sFile" >> "$sDestFile"
	done
}


doBuild
